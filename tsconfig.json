{
  "compilerOptions": {
  "target": "ES2020",
  "module": "Node16",
  "moduleResolution": "Node16",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
  "rootDir": ".",
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["server/src/**/*", "js/**/*"],
  "exclude": ["node_modules", "dist", "server/node_modules"]
}
